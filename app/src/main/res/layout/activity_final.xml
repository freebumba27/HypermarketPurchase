<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blue400" >

    <Button
        android:id="@+id/btnlogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:background="@color/Blue400"
        android:drawableLeft="@drawable/ic_exit_to_app_white_24dp"
        android:text=" Logout"
        android:textColor="@color/WhiteSmoke" />

    <TextView
        android:id="@+id/tvbranchselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnlogout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15sp"
        android:textColor="@color/WhiteSmoke"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivfinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvbranchselected"
        android:layout_centerInParent="true"
        android:layout_marginTop="40sp"
        android:background="@color/Blue400"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:src="@drawable/carrefourlog"
        android:text="Electronics"
        android:textColor="@color/WhiteSmoke" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivfinal"
        android:layout_centerInParent="true"
        android:layout_marginTop="25sp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Total is "
            android:textColor="@color/WhiteSmoke"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvtotalamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text=""
            android:textColor="@color/WhiteSmoke"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Pay via"
            android:textColor="@color/WhiteSmoke"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Blue400"
            android:drawableLeft="@drawable/ic_credit_card_white_36dp"
            android:text="Credit Card"
            android:textColor="@color/WhiteSmoke"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Or go to nearest branch"
            android:textColor="@color/WhiteSmoke"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15sp"
        android:background="@color/Blue400"
        android:drawableLeft="@drawable/ic_home_white_36dp"
        android:text="Home"
        android:textColor="@color/WhiteSmoke"
        android:textStyle="bold" />

</RelativeLayout>