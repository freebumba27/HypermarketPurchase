<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blue400" >

    <Button
        android:id="@+id/btnlogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:background="@color/Blue400"
        android:drawableLeft="@drawable/ic_exit_to_app_white_24dp"
        android:text=" Logout"
        android:textColor="@color/WhiteSmoke" />

    <TextView
        android:id="@+id/tvbranchselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnlogout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15sp"
        android:textColor="@color/WhiteSmoke"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btnElectronics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvbranchselected"
        android:layout_centerInParent="true"
        android:layout_marginTop="40sp"
        android:background="@color/Blue400"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:src="@drawable/tv_audio"
        android:text="Electronics"
        android:textColor="@color/WhiteSmoke" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnElectronics"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="25sp"
        android:gravity="center"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/cbLipstick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIOR Lip Gloss"
            android:textColor="@color/WhiteSmoke" />

        <TextView
            android:id="@+id/tvLipstickPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AED 130"
            android:textColor="@color/WhiteSmoke" />

        <EditText
            android:id="@+id/etLipstickQuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:hint="Quantity"
            android:textAlignment="center"
            android:textColor="@color/WhiteSmoke"
            android:textColorHint="@color/WhiteSmoke"
            android:visibility="invisible" />

        <CheckBox
            android:id="@+id/cbFairnLovely"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Fair n Lovely Beauty Cream"
            android:textColor="@color/WhiteSmoke" />

        <TextView
            android:id="@+id/tvFairnLovelyPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AED 20"
            android:textColor="@color/WhiteSmoke" />

        <EditText
            android:id="@+id/etFairnLovelyQuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:hint="Quantity"
            android:textAlignment="center"
            android:textColor="@color/WhiteSmoke"
            android:textColorHint="@color/WhiteSmoke"
            android:visibility="invisible" />
    </LinearLayout>

    <Button
        android:id="@+id/btncart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20sp"
        android:background="@color/Blue400"
        android:drawableLeft="@drawable/ic_add_shopping_cart_white_36dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="Add to\nCart"
        android:textColor="@color/WhiteSmoke" />

</RelativeLayout>